<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lyt_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/evento_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/evento_localevento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evento_title2"
            android:layout_marginTop="8dp"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/lyt_date1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evento_localevento"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_dateinicial" />

            <TextView
                android:id="@+id/lbldata_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" InÃ­cio: "
                android:textColor="@color/colorText"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/evento_datainicio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 de dezembro de 2019"
                android:textColor="@color/colorText" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_date2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lyt_date1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_datafinal" />

            <TextView
                android:id="@+id/lbldata_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Fim: "
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/evento_datafinal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 de dezembro de 2019"
                android:textColor="@color/colorText" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_date4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lyt_date3"
            android:gravity="center|top"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">


            <ImageView
                android:layout_width="14dp"
                android:layout_height="21dp"
                android:layout_gravity="center|top"
                android:src="@drawable/ic_website" />

            <TextView
                android:id="@+id/lblsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Website: "
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/evento_website2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="www.website.pt"
                android:textColor="@color/colorText" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/lyt_date3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lyt_date2"
            android:gravity="center|top"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="21dp"
                android:layout_gravity="center|top"
                android:src="@drawable/ic_local" />

            <TextView
                android:id="@+id/lbllocalevento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Local: "
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/ev_localevento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Lisboa"
                android:textColor="@color/colorText" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_head2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lyt_head"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp">

        <WebView
            android:id="@+id/news_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />

    </RelativeLayout>

</RelativeLayout>